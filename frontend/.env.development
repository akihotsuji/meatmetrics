# 開発環境用設定
VITE_APP_NAME=MeatMetrics
VITE_APP_VERSION=1.0.0-MVP
VITE_APP_ENVIRONMENT=development

# API設定
VITE_API_BASE_URL=http://localhost:8080/api
VITE_PROXY_TARGET=http://backend:8080

# 認証設定
VITE_JWT_TOKEN_KEY=meatmetrics_jwt_token
VITE_JWT_REFRESH_KEY=meatmetrics_refresh_token

# 機能フラグ（MVP）
VITE_FEATURE_FOOD_CATALOG=true
VITE_FEATURE_MEAL_TRACKING=true
VITE_FEATURE_DAILY_SUMMARY=true
VITE_FEATURE_GOAL_SETTING=true
VITE_FEATURE_DATA_ANALYSIS=false

# UI設定
VITE_APP_THEME=light
VITE_DEFAULT_LOCALE=ja

# デバッグ設定
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
